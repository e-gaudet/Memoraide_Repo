@model DeckViewModel
@{
    ViewData["Title"] = "Deck Details";
}


<h2>Deck Details</h2>

<h4>To edit the deck information, enter new data into Deck name.</h4>
<hr />

@if (TempData["message"] != null)
{
    <div class="alert">
        @TempData["Message"]
    </div>
}

@if (TempData["edit"] != null)
{
    <script>
        ToggleEdit();
    </script>
}


<div class="row">
    <div class="col-md-4">       
        <form asp-controller="Deck" asp-action="ViewDeckDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="isSubbed" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" readonly="@(true)" />
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly="@(true)" />
            </div>
            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" readonly="@(true)" />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-default" />
                @if (Model.isSubbed)
                {
                    <button asp-controller="Deck" asp-action="UnsubscribeFromDeck" class="btn btn-default">Unsubscribe</button>
                }
                else
                {
                    <button asp-controller="Deck" asp-action="SubscribeToDeck" class="btn btn-default">Subscribe</button>
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewDeck">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
