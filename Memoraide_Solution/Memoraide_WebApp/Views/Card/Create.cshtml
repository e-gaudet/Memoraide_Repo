@model CardViewModel
@{
    ViewData["Title"] = "Create";
}

@if (TempData["message"] != null)
{
    <div class="alert">
        @TempData["Message"]
    </div>
}

<h2>Create</h2>

<form asp-controller="Card" asp-action="Create" method="post">
    <div class="form-horizontal">
        input type="hidden" asp-for="DeckId" value="1" /><!--<Temporary until decks are finished-->
        <label asp-for="Question"></label>:<br />
        <textarea asp-for="Question"></textarea><br />
        <span asp-validation-for="Question"></span><br />
        <label asp-for="Answer"></label>:<br />
        <textarea asp-for="Answer"></textarea><br />
        <span asp-validation-for="Answer"></span><br />
        <!---<label asp-for="CardTags"></label>: <input asp-for="CardTags" /><br />--->
        <!--<span asp-validation-for="CardTags"></span>-->
        <button type="submit">Add Card</button><button type="reset" onclick="return confirm('Clear card?');">Clear Card</button>
    </div>
</form>
